<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.liyulin.shiro.webflux.mapper.RoleMapper">

    <sql id="base_column_list">
        id, user_id, role_id
    </sql>

    <select id="findRoleByUserId" parameterType="Integer" resultType="com.liyulin.shiro.webflux.entity.Role">
        SELECT
            r.id,
            r.role
        FROM
            role r,
            `user` u,
            user_role ur
        WHERE
            r.id = ur.role_id
        AND ur.user_id = u.id
        AND u.id = #{userId}
    </select>

</mapper>